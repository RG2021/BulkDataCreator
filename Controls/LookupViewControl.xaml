<UserControl x:Class="Mockit.Controls.LookupViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mockit.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="SimpleRoundedButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Border.CornerRadius" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="LookupEntityBox" Grid.Column="0" RenderTransformOrigin="0.5,0.5" Margin="10,0,10,2" Width="Auto" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="5,5,5,5" BorderBrush="White" Background="White"/>
            <ComboBox x:Name="SelectedViewBox" Grid.Column="1" RenderTransformOrigin="0.5,0.5" Margin="0,0,10,2" Width="Auto" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="120" Padding="5,5,5,5" Tag="SelectViewAction" BorderBrush="White" Foreground="Black">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <TextBox x:Name="SearchTextBox" Grid.Column="3" TextWrapping="Wrap" Margin="0,0,10,2" HorizontalAlignment="Right" Width="180" Padding="5,5,5,5"/>
            <ComboBox x:Name="SearchFieldsBox" Grid.Column="4" Margin="0,0,10,2" RenderTransformOrigin="0.5,0.5" Width="Auto" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="5,5,5,5" BorderBrush="White">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <Button x:Name="SearchButton" Grid.Column="5" Content="Search" Margin="0,0,10,2" HorizontalAlignment="Right" Width="63" Style="{StaticResource SimpleRoundedButton}" Tag="SearchAction" Padding="5,5,5,5"/>
        </Grid>

        <DataGrid x:Name="LookupGrid" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="10,0,10,5" HeadersVisibility="Column" ColumnWidth="Auto" Background="White" HorizontalGridLinesBrush="#FFCDCDCD" VerticalGridLinesBrush="#FFA3A3A3" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserReorderColumns="False" VerticalAlignment="Stretch" IsTextSearchEnabled="True" IsTextSearchCaseSensitive="True" IsReadOnly="False" ForceCursor="True" IsSynchronizedWithCurrentItem="True" RowDetailsVisibilityMode="Visible" RowHeight="22" EnableRowVirtualization="False" SelectionUnit="Cell"/>
        <GroupBox Grid.Row="2" Header="Mock Expression" Height="120">
            <TextBox x:Name="ExpressionTextBox" TextWrapping="Wrap" Width="Auto" Height="Auto" Margin="5,0,5,5" IsReadOnly="True" ScrollViewer.CanContentScroll="True" Padding="5,5,5,5" FontFamily="Consolas"/>
        </GroupBox>

    </Grid>
</UserControl>
